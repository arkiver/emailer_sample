%html{"xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %body  
    :css
      h1{
        padding: 0px;
        margin: 0px;
      }
      hr{
        width: 90%;
        margin-left: 40px;
        color: black;
      }
      body{
        margin: 0px;
        padding: 0px;
        font-size: 1.3em;
      }
      table{
        width: 100%;
      }
      table.footer_table{
        text-align: center;
        width: 850px;
        padding-left: 40px;
      }
      table.text_logo_table{
        height: 100px;
        background: transparent;
      }

      img{
        height: 80px;
      }
      img.app_store{
        max-height: 30px;
        max-width: 130px;
      }
      img.play_store{
        max-height: 30px;
        max-width: 130px;
      }
      td.center_main_table{
        background: rgb(152, 215, 43);
        background-image: -webkit-radial-gradient(50% 25%, 1140px 1040px, rgba(255, 255, 255, 255) 0%, rgb(152, 215, 43) 38%);
        background-image: -ms-radial-gradient(50% 25%, 1140px 1040px, rgba(255, 255, 255, 255) 0%, rgb(152, 215, 43) 38%);
        background-image: -o-radial-gradient(50% 25%, 1140px 1040px, rgba(255, 255, 255, 255) 0%, rgb(152, 215, 43) 38%);
        background-image: radial-gradient(50% 25%, 1140px 1040px, rgba(255, 255, 255, 255) 0%, rgb(152, 215, 43) 38%);
        background-image: -moz-radial-gradient(50% 25%, 1140px 1040px, rgba(255, 255, 255, 255) 0%, rgb(152, 215, 43) 38%);
        background: -moz-radial-gradient(50% 25% , ellipse closest-side, #FFFFFF, #98D72B 120%) repeat scroll 0 0 #98D72B;
      }
      .right{
        margin-top: 200px;
        padding-right: 60px;
      }
      .left{
        padding-left: 50px;
      }
      .huge_text{
        font-size: 4em;
      }
      .text_area.larger{
        font-size: 1.6em;
        padding-top: 15px;
      }
      .center_footer{
        padding-bottom: 50px;
      }
      .center_upper_imagebox{
        padding-left: 220px;
        height: 240px;
        max-height: 240px;
      }
    %table
      %tr
        %td.left_main_table
          .left_container
            %h1

        %td.center_main_table{:width => "900px"}
          .center_container
            .center_upper
              %table.center_upper_table
                %tr
                  %td.imagebox{:height => "500px"}
                    .center_upper_imagebox
                      %img.center_image{:src => "<image link goes here>", :alt => "new updated price image: large"}
            .center_mid
              %table.text_logo_table
                %col{:width => "1500"}
                  %col{:width => "100"}
                    %tr
                      %td
                        .left
                          .huge_text
                            Airfare Up.
                          .huge_text
                            Cab fare down.
                          .text_area.larger
                            Banglore airport transfer for only Rs.500/-
                          .text_area.larger
                            To Book a cab  call 3355 3355
                          .text_area.larger
                            Use code Airport500
                      %td{:align => "center"}
                        .right
                          %a{:href => "http://www.olacabs.com"}
                            %img{:src => "<image link goes here>", :alt => "Ola cabs logo", :id => "logo"}
                          %span.logo_text
                            Be independent
            %hr      
            .center_footer
              %table.footer_table
                %tr
                  %td{:width => "190px;"}
                    Track your cab on app&nbsp;&nbsp;&nbsp;|
                  %td{:width => "170px;"}
                    Same cab fare 24X7&nbsp;&nbsp;&nbsp;|
                  %td{:width => "190px;"}
                    Download the app from
                  %td{:cellpadding => "50px"}
                    %a{:href => "https://play.google.com/store/apps/details?id=com.olacabs.customer&hl=en"}
                      %img.play_store{:src => "<image link goes here>", :alt => "google play logo"}
                  %td
                    %a{:href => "http://itunes.apple.com/in/app/ola-cabs/id539179365?mt=8"}
                      %img.app_store{:src => "<image link goes here>", :alt => "apple app store logo"}

        %td.right_main_table
          .right_container
            %h1
